{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/configs/themes"], //type extend
    "types": ["@types/jest", "webpack-env"] // require.context사용
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
